{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: MSYS2 UCRT64 g++ build MPI file",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-I", "C:/Program Files (x86)/Microsoft SDKs/MPI/Include",
                "-L", "C:/Program Files (x86)/Microsoft SDKs/MPI/Lib/x64",
                "-lmsmpi",
                "-o", "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build MPI program using MSYS2 UCRT64 g++"
        }
    ]
}
